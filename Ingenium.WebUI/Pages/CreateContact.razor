@page "/Create"

@inherits CreateContactBase

<h2 class="mb-5">Create contact</h2>

<div class="row mb-3">
    <form class="col-lg-6">

        <DisplayErrors Errors="@Errors"></DisplayErrors>
        <ContactEditor Contact="@Contact"> </ContactEditor>

        <button type="button" class="btn btn-primary" @onclick='async () => await SaveChangesAsync()'>Create</button>
        <button type="button" class="btn btn-secondary" @onclick='() => NavigationManager.NavigateTo("/")'>Cancel</button>
    </form>
</div> 