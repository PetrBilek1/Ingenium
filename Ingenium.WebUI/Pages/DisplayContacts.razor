@inherits DisplayContactsBase

@foreach (var contact in Contacts)
{
    <div class="col-md-6 mb-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    @contact.FirstName @contact.LastName
                </h5>
                <p class="card-text">
                    <b>@TelephoneNumberFormated(contact)</b>
                </p>
                <p class="card-text">
                    Email: @contact.Email <br>
                    Active: <input class="form-check-input" type="checkbox" @bind="contact.IsActive" disabled> <br>
                    Birth: @contact.BirthDate.ToShortDateString()
                </p>
                <button class="btn btn-primary" @onclick='() => NavigationManager.NavigateTo($"Edit/{contact.Id}")'>Edit</button>
            </div>
        </div>
    </div>
}